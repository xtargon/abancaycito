div(class="one_index")

	img(src="/static/img_main_file/logo_abancaycito_v1.png" class="ppp")
	div(class="menu")


		a(href="/home")
			i.material-icons home

		a(class="menu-show" href="/tienda")
			i.material-icons shopping_cart
	a.unreal.btn.float-right.login_btn(href="/login")
		i.rac.material-icons account_circle
		p(class="rac_black") Entrar

div(class="principal_store")
	img(src="/static/img_main_file/abc_logo.png" class="store_1")
	h4(class="store_2") -> Trabajos
	hr
	div(class="all_works")
		each work in works
			div(class="works")
				div(class="title_work")
					h5 #{work.affair}
				hr
				div(class="inf_work")
					p 
						i.material-icons monetization_on
						p(class="earn") #{work.earn}
				div(class="inf_work")
					p 
						i.material-icons call
						p #{work.phone}
				div(class="inf_work")
					p 
						i.material-icons room
						p #{work.location}
				div(class="inf_work")
					p 			
						i.material-icons today
						p #{work.date}